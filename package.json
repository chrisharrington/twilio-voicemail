{
  "name": "twilio-voicemail",
  "version": "1.0.0",
  "description": "A simple voicemail app powered by Twilio that sends emails transcriptions.",
  "main": "index.js",
  "repository": "https://github.com/chrisharrington/twilio-voicemail.git",
  "author": "Chris Harrington <chrisharrington99@gmail.com>",
  "license": "MIT",
  "scripts": {
    "run:build": "yarn && ./node_modules/.bin/tsc",
    "run:dev": "yarn && ./node_modules/.bin/copyfiles ./assets/greeting.wav ./dist && ./node_modules/.bin/nodemon",
    "run:prod": "yarn && cp /secret.json src/. && ./node_modules/.bin/tsc && node dist/index.js"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "@types/request": "^2.48.1",
    "base64-stream": "^1.0.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "module-alias": "^2.1.0",
    "moment": "^2.22.2",
    "mongodb": "^3.1.8",
    "nodemon": "^1.19.2",
    "request": "^2.88.0",
    "superagent": "^5.1.0",
    "ts-node": "^7.0.1",
    "twilio": "^3.23.2",
    "typescript": "^3.6.3"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/mongodb": "^3.1.13",
    "@types/node": "^12.7.7",
    "copyfiles": "^2.1.1"
  },
  "_moduleAliases": {
    "@src": "./dist"
  }
}
